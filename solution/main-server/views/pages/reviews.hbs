<div class="container-fluid my-4 px-5">
    <div class="row">
        <form id="filter-form">
            <!-- Review Searchbar (movie title) -->
            <div class="col-12">
                {{!> movie-searchbar title=filters.obj.title}}
            </div>

            <!-- Review Generic Filters -->
            <div class="col-12">
                {{!> filter-checkboxes elements=genres active-elements=filters.obj.genre id="genre" name="Genre"}}

                {{!> filter-checkboxes-search elements=languages active-elements=filters.obj.language id="language" name="Language"}}

                {{!> filter-search active-elements=filters.obj.actor id="actor" name="Actor"}}
            </div>
        </form>

        <!-- Movie cards container -->
        <div class="col-lg-12">
            <!-- Pagination centered at the top of the review cards -->
            <div class="d-flex justify-content-center mb-3">
                {{> pagination prevPage=prevPage nextPage=nextPage}}
            </div>

            <div class="row g-3">
                {{#each reviews}}
                    <div class="col-6">
                        {{> review-card review=this}}
                    </div>
                {{/each}}
            </div>

            <!-- Pagination centered at the bottom of the review cards -->
            <div class="d-flex justify-content-center mt-3">
                {{> pagination prevPage=prevPage nextPage=nextPage}}
            </div>
        </div>
    </div>
</div>
