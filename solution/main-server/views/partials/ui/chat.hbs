<div class="chat-toggle" id="chatToggle">
    <span>&#x1F4AC;</span>
</div>

<!-- Chat panel -->
<div class="chat-panel" id="chatPanel">

    <div class="chat-header">{{title}} Chat</div>

    <div class="chat-messages" id="chatMessages"></div>

    <div class="chat-input" id="chatInputContainer">
        <input type="text" id="chatInput" placeholder="Write a message...">
        <button id="chatSend">Send</button>
    </div>

    <!-- Username input section (hidden by default) -->
    <div class="chat-username-input" id="usernameInputContainer" style="display: none;">
        <input type="text" id="usernameInput" placeholder="Enter your username" />
        <button id="usernameSubmit">Join Chat</button>
    </div>
</div>