<div class="container-fluid px-4 mb-3"
     style="background-color: rgba(44, 44, 44, 1); border-radius: 10px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2)">
    <div class="row justify-content-center">
        <h3 class="text-left pt-4 pb-2">Filters</h3>

        <hr class="border-4 rounded" style="border-color: white;">

        <form class="p-2">
            <!-- Title -->
            <div class="form-group mb-2">
                <label class="form-label">Title</label>
                <input type="text" class="form-control" placeholder="Enter the movie title">
            </div>

            <!-- Year -->
            <div class="form-group mb-2">
                <label class="form-label">Year</label>
                <div class="d-flex gap-2">
                    <input type="number" class="form-control bg-dark text-white border-secondary" min="" max="" placeholder="From">
                    <input type="number" class="form-control bg-dark text-white border-secondary" min="" max="" placeholder="To">
                </div>
            </div>

            <!-- Rating -->
            <div class="form-group mb-2">
                <label class="form-label">Rating</label>
                <div class="d-flex gap-2">
                    <input type="number" class="form-control bg-dark text-white border-secondary" step="0.1" min="" max="10" placeholder="From">
                    <input type="number" class="form-control bg-dark text-white border-secondary" step="0.1" min="" max="" placeholder="To">
                </div>
            </div>

            <!-- Genre -->
            <div class="form-group mb-2">
                <label class="form-label">Genre</label>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox">
                    <label class="form-check-label">Action</label>
                </div>
            </div>

            <!-- Duration -->
            <div class="form-group mb-2">
                <label class="form-label">Duration</label>
                <div class="d-flex gap-2">
                    <input type="number" class="form-control bg-dark text-white border-secondary" min="" max="" placeholder="">
                    <input type="number" class="form-control bg-dark text-white border-secondary" min="" max="" placeholder="">
                </div>
            </div>

            <!-- Language -->
            <div class="form-group mb-2">
                <label class="form-label">Language</label>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox">
                    <label class="form-check-label">English</label>
                </div>
            </div>

            <!-- Country -->
            <div class="form-group mb-2">
                <label class="form-label">Country</label>
                <input type="text" class="form-control bg-dark text-white border-secondary" placeholder="">
            </div>

            <!-- Studio -->
            <div class="form-group mb-2">
                <label class="form-label">Studio</label>
                <input type="text" class="form-control bg-dark text-white border-secondary" placeholder="">
            </div>

            <!-- MP AA Rating -->
            <div class="form-group mb-2">
                <label class="form-label">MP AA Rating</label>
                <select class="form-control bg-dark text-white border-secondary">
                    <option>Select rating</option>
                    <!-- example -->
                    <option value="1">1</option>
                    <option value="2">1</option>
                    <option value="3">1</option>
                </select>
            </div>

            <div class="d-flex gap-2 my-3">
                <button class="btn btn-primary w-50">Search</button>
                <button class="btn btn-danger w-50">Reset</button>
            </div>
        </form>
    </div>
</div>
