<form method="GET" action="">
    <div>
        <h3>Filters</h3>

        <!-- Title Filter -->
        <div>
            <label for="title">Title</label>
            <input type="text" name="title" placeholder="Enter movie title">
        </div>

        <!-- Year Filter -->
        <div>
            <label for="year">Year</label>
            <input type="number" name="year_min" min="1900" max="2024" placeholder="From">
            <input type="number" name="year_max" min="1900" max="2024" placeholder="To">
        </div>

        <!-- Rating Filter -->
        <div>
            <label for="rating">Rating</label>
            <input type="number" name="rating_min" step="0.1" min="0" max="10" placeholder="From">
            <input type="number" name="rating_max" step="0.1" min="0" max="10" placeholder="To">
        </div>

        <!-- Genre Filter -->
        <div>
            <label for="genre">Genre</label>
            <input type="text" name="genre" placeholder="Search genres">
            <div>
                <input type="checkbox" name="genre" value="Action"> Action
                <input type="checkbox" name="genre" value="Comedy"> Comedy
                <input type="checkbox" name="genre" value="Drama"> Drama
                <!-- Add more genres as needed -->
            </div>
        </div>

        <!-- Duration Filter -->
        <div>
            <label for="duration">Duration</label>
            <input type="number" name="duration_min" min="0" max="300" placeholder="Min">
            <input type="number" name="duration_max" min="0" max="300" placeholder="Max">
        </div>

        <!-- Language Filter -->
        <div>
            <label for="language">Language</label>
            <input type="text" name="language" placeholder="Search languages">
            <div>
                <input type="checkbox" name="language" value="English"> English
                <input type="checkbox" name="language" value="French"> French
                <input type="checkbox" name="language" value="Spanish"> Spanish
                <!-- Add more languages as needed -->
            </div>
        </div>

        <!-- Studio Filter -->
        <div>
            <label for="studio">Studio</label>
            <input type="text" name="studio" placeholder="Enter studio name">
        </div>

        <!-- Rating (PG13, etc.) Filter -->
        <div>
            <label for="rating">MPAA Rating</label>
            <select name="mpaa_rating">
                <option value="">Select rating</option>
                <option value="G">G</option>
                <option value="PG">PG</option>
                <option value="PG-13">PG-13</option>
                <option value="R">R</option>
                <option value="NC-17">NC-17</option>
            </select>
        </div>

        <div>
            <button type="submit">Filter</button>
        </div>
    </div>
</form>