<div class="card mb-4 py-2 px-3 rounded text-white d-flex flex-column h-100"
     style="background-color: rgba(44, 44, 44, 1); box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2)">
    <!-- Review-Card Content -->
    <div class="d-flex flex-column flex-grow-1">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <div>
                <strong style="font-size: 1.25rem;">{{review.critic_name}}</strong>
                {{#if review.is_top_critic}}
                    <span class="badge bg-success">Top Critic</span>
                {{/if}}
                <span>on</span>
                <strong style="color: #f39c12;">{{review.movie_title}}</strong>
            </div>
            <span class="text-secondary" style="font-size: 1rem;">{{review.publisher_name}}</span>
        </div>

        <p class="card-text mb-3 flex-grow-1">{{review.content}}</p>
    </div>

    <!-- Review-Card footer -->
    <div class="">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                {{#if (eq review.type "Fresh")}}
                    <img src="/images/tomato-48.png" alt="Fresh">
                {{else if (eq review.type "Rotten")}}
                    <img src="/images/rotten-tomatoes-48.png" alt="Rotten">
                {{/if}}

                {{#if review.score}}
                    Rated: {{review.score}}
                {{/if}}
            </div>
            <span class="text-secondary">{{review.review_date}}</span>
        </div>
    </div>
</div>
